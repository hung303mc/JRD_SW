	property int countdownNumber: 10
    property int orderKeyboard:3
    Timer {
        interval: 500; running: true; repeat: true
        onTriggered: {
                if(orderKeyboard == 3){
                    if(countdownNumber == 0){
                        txtCountdown.text = "TimeOutKeyboard1"
                        keyboard1.state = "state1Off"
                        orderKeyboard = orderKeyboard -1
                        countdownNumber = 10
                    }
                    else{
                        txtCountdown.text = countdownNumber.toString()
                        countdownNumber = countdownNumber -1
                        keyboard1.state = "state1On"
                        if(mouseKeyboard1.containsMouse == true)
                        {
                            keyboard1.color = "red"
                        }
                    }
                }
                else if(orderKeyboard == 2){
                    if(countdownNumber == 0){
                        txtCountdown.text = "TimeOutKeyboard2"
                        keyboard2.state = "state2Off"
                        orderKeyboard = orderKeyboard -1
                        countdownNumber = 10
                    }
                    else{
                        txtCountdown.text = countdownNumber.toString()
                        countdownNumber = countdownNumber -1
                        keyboard2.state = "state2On"
                        if(mouseKeyboard2.containsMouse == true)
                        {
                            keyboard2.color = "red"
                        }
                    }
                }
                else if(orderKeyboard == 1){
                    if(countdownNumber == 0){
                        txtCountdown.text = "TimeOutKeyboard3"
                        keyboard3.state = "state3Off"
                        orderKeyboard = orderKeyboard -1
                        countdownNumber = 10
                    }
                    else{
                        txtCountdown.text = countdownNumber.toString()
                        countdownNumber = countdownNumber -1
                        keyboard3.state = "state3On"
                        if(mouseKeyboard3.containsMouse == true)
                        {
                            keyboard3.color = "red"
                        }
                    }
                }
                else if(orderKeyboard == 0){
                    if(countdownNumber == 0){
                        txtCountdown.text = "TimeOut"
                        Timer.running = false
                    }
                    else{}
                }
                txtorderKeyboard.text = orderKeyboard.toString()
            }
        }
    Text {id: txtCountdown; x:30;y:0}
    Text {id: txtorderKeyboard}

